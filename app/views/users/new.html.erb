<h1>Create Account</h1>

<%= form_for @user do |f| %>
  <%= render partial: "shared/errors", locals: { target: @user } %>
  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Create Account" %>
<% end %>
